numtools = 6 'this is the number of turret positionsnewtool = GetSelectedTool( )thistool = GetOEMDRO(1000) 'current tool DROWhile(thistool < 1 Or thistool > numtools)thistool = question("Please enter the current tool")WendSetOEMDRO 1000,newtoolIf(newtool <> thistool And newtool > 0 And newtool <= numtools) ThenActivateSignal( OUTPUT2)While(IsMoving( ))Sleep(200)WendWhile(thistool <> newtool)thistool = thistool +1If (thistool > 6) Then thistool =1While(Not IsActive(INPUT1) ) 'wait for switch to openWendWhile(IsActive( INPUT1)) 'wait for switch to closeWendWendDeActivateSignal( OUTPUT2)While(IsMoving( ))Sleep(200)WendEnd IfSetCurrentTool( newtool)  Sleep (1500)